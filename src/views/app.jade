extends ./base.jade
block append style
    link(rel="stylesheet", type="text/css", href="/assets/style.css")
block body
  div(id = "secondaryColor" style = "display:hidden" color = "" + pageColors.secondary)
  nav(id="navApp" style = "background:" + pageColors.primary)
    a(href="/login")
      img#logo(src="/assets/img/color_Logo.png", alt="logo")
    .navlink
      a(href="/logout") Log out
    #title
      h3
       span Match Level Maker
  section#makeDomo
    form#domoForm(class="domoForm", name="domoForm", action="/maker", method="POST")
      label(for="name") Name: 
      input#domoName(type="text", name="name", placeholder="Domo Name")
      label(for="age") Age: 
      input#domoAge(type="text", name="age", placeholder="Domo Age")
      label(for="checkbox") Friendly?: 
      input#domoFriendly(type="checkbox", name="friendly")
      input(type="hidden",name="_csrf",value="#{csrfToken}")
      a#makeDomoSubmit(class="makeDomoSubmit", href="#") Make Domo
  section#domos
    if !domos || domos.length == 0
      div.domo
        h3.emptyDomo No Domos yet
    else
      each val in domos
        div.domo
          if val.friendly == "Yes"
            img(class="domoFace",src="/assets/img/face.png",alt="domo face")
          else
             img(class="domoFace",src="/assets/img/domoface.jpeg",alt="domo face")
          h3.domoName Name: #{val.name}
          h3.domoAge Age: #{val.age}
          h3.domoFriendly Friendly?: #{val.friendly}
  #domoMessage
    img#speech(src="/assets/img/speech.png", alt="speech box")
    h3
      span#errorMessage
    img#domo(src="assets/img/domo.png", alt="domo")
block scripts
        script(src="/assets/maker.js")